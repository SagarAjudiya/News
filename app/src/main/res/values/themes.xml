<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.News" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.News" parent="Base.Theme.News" />

    <!--    TextView-->
    <style name="Text16" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Text12" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="fontFamily">@font/sora_regular</item>
    </style>

    <style name="Text14" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Text14Grey" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_regular</item>
    </style>

    <style name="Text14BlackRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_regular</item>
    </style>

    <style name="Text14BlackMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/sora_medium</item>
    </style>

    <style name="Text18" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Text20" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <!--   Round ImageCorner -->
    <style name="roundedImageView14" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_14dp</item>
    </style>

<!--    Button-->
    <style name="Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="fontFamily">@font/sora_bold</item>
    </style>

    <style name="Button.Small" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/offBlack</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="fontFamily">@font/sora_regular</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/_1dp</item>
    </style>

</resources>